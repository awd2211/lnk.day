{
  "manifest_version": 3,
  "name": "lnk.day - Link Shortener",
  "version": "1.0.0",
  "description": "Quickly shorten links with lnk.day - the enterprise link management platform",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "tabs",
    "notifications",
    "offscreen",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://api.lnk.day/*",
    "https://*.lnk.day/*"
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "lnk.day Link Shortener"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "options_page": "src/options/index.html",
  "commands": {
    "shorten-current-page": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Shorten the current page URL"
    },
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Open extension popup"
    }
  }
}
