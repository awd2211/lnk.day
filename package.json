{
  "name": "lnk.day",
  "version": "1.0.0",
  "private": true,
  "description": "Enterprise link management platform - Bitly alternative",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.2"
  },
  "packageManager": "pnpm@8.11.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-sns": "^3.940.0",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/core": "^10.4.20",
    "@nestjs/common": "^10.4.20",
    "@nestjs/schedule": "^4.1.2",
    "@nestjs/websockets": "^11.1.9",
    "reflect-metadata": "^0.1.14",
    "socket.io": "^4.8.1",
    "twilio": "^5.10.6"
  }
}
